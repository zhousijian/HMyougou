/* pages/goods_list/index.wxss */

.common_search .top {
  padding: 30rpx 16rpx;
  background-color: #eee;
}

.common_search .top .top-search {
  justify-content: flex-start;
}

.goods_list .sort {
  display: flex;
  justify-content: space-around;
  align-items: center;
  height: 100rpx;
  border-bottom: 1px solid #eee;
}

.goods_list .goods_list_item {
  display: flex;
  padding: 20rpx;
  height: 220rpx;
  align-items: center;
}

.goods_list .goods_list_item .left image {
  width: 200rpx;
  height: 200rpx;
}

.goods_list .goods_list_item .right {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 10rpx;
  padding-left: 20rpx;
  height: 180rpx;
}
.goods_list .goods_list_item .right .title {
  font-size: 13px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.goods_list .goods_list_item .right .price {
  color: red;
}
.goods_list .goods_list_item .right .price .fuhao {
  font-size: 12px;
}
.goods_list .bottom {
  margin: 15rpx auto;
  text-align: center;
  color: #555;
  font-size: 14px;
}