/* pages/personal/index.wxss */

.personal {
  min-height: 100vh;
  background-color: rgb(243, 243, 243);
  margin-bottom: 120rpx;
}

.userInfo {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  background-color: #eb4450;
  width: 750rpx;
  color: #fff;
  height: 400rpx;
}

.userInfo .headImg {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}

.userInfo .headImg .content {
  margin: 0 70rpx;
  width: 200rpx;
  height: 200rpx;
  border: 2px solid #fff;
  border-radius: 50%;
  overflow: hidden;
}

.userInfo .headImg .content image {
  width: 100%;
  height: 100%;
}

.collect {
  z-index: 5;
  display: flex;
  box-sizing: border-box;
  padding: 0 20rpx;
  margin: 0 auto;
  margin-top: -20rpx;
  justify-content: space-between;
  width: 718rpx;
  height: 120rpx;
  background-color: #fff;
}

.collect > view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: 12px;
  color: #666;
}

.myOrder {
  margin: 20rpx auto;
  margin-bottom: 1px;
  width: 718rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  text-indent: 1em;
  font-size: 14px;
}

.orderState {
  display: flex;
  justify-content: space-between;
  margin: 0 auto;
  width: 718rpx;
  height: 168rpx;
  background-color: #fff;
}

.orderState > view {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  box-sizing: border-box;
  padding: 0 30rpx;
  font-size: 13px;
}

.orderState > view .iconfont {
  margin-bottom: 3px;
  font-size: 25px;
  color: #eb4450;
}

.address, .idea {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 20rpx auto;
  width: 718rpx;
  height: 88rpx;
  line-height: 88rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 14px;
}
.idea {
  margin-top: 1px;
  margin-bottom: 1px;
}
.address::after,
.idea::after {
  content: '';
  display: block;
  width: 20rpx;
  height: 20rpx;
  border-top: 1px solid #777;
  border-right: 1px solid #777;
  transform: rotate(45deg)
}
.personal .service {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin: 0 auto;
  width: 718rpx;
  height: 88rpx;
  background-color: #fff;
  box-sizing: border-box;
  padding: 0 35rpx;
  font-size: 14px;
}
.service .tel {
  color: #777;
}
