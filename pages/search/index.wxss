/* pages/search/index.wxss */
.header_search {
  display: flex;
  width: 750rpx;
  padding: 20rpx 16rpx;
  background-color: #eee;
  box-sizing: border-box;
}
.header_search .left {
  display: flex;
  flex: 1;
  align-items: center;
  height: 65rpx;
  background-color: #fff;
  border-radius: 5px;
}
.header_search .left input {
  font-size: 14px;
}
.header_search .left icon {
  margin: 0 20rpx;
  margin-top: 2px;
}
.header_search .right {
  width: 158rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  margin-left: 20rpx;
  border: 1px solid #ddd;
  border-radius: 5px;
  font-size: 14px;
}
.history {
  padding: 20rpx 16rpx;
}
.history .top {
  display: flex;
  justify-content: space-between;
  padding-bottom: 20rpx;
}
.history .bottom {
  display: flex;
  flex-wrap: wrap;
}
.history .bottom view {
  padding: 20rpx;
  background-color: #ddd;
  margin-right: 30rpx;
  font-size: 13px;
  margin-bottom: 20rpx;
  color: #4a4a4a;
}